const nodemailer = require("nodemailer");

const transporter = nodemailer.createTransport({
  host: "mail.snametechapp.com", 
  port: 465,
  secure: true,
  requireTLS: true,            
  auth: {
    user: process.env.EMAIL_USER, // e.g., "admin@yourdomain.com"
    pass: process.env.EMAIL_PASS, // the email password you set in aaPanel
  },
  debug: true,
  logger: true,
});



function sendVerificationEmail(email, token) {
const verificationUrl = `http://localhost:5173/?token=${token}`;

const mailOptions = {
    from: "EnergyProjectsData <info@energyprojectsdata.com>",
    to: email,
    subject: "Verify Your Email",
    html: `
    <p>Hello,</p>
    <p>Thank you for registering. Please verify your email address by clicking the link below:</p>
    <a href="${verificationUrl}" style="background-color:#4CAF50;color:white;padding:10px 20px;text-decoration:none;border-radius:5px;">Verify Email</a>
    <p>This link will expire in 1 hour.</p>
    `,
};  

transporter.sendMail(mailOptions, (err, info) => {
    if (err) {
    console.error("Error sending email:", err);
    } else {
    console.log("Verification email sent:", info.response);
    }
});
}

module.exports = { sendVerificationEmail, transporter };